---
const { nome, denominacao, imagem } = Astro.props;
---

<article class="cromo-card">
  <div class="cromo-img-wrapper">
    <img src={imagem} alt={nome} class="cromo-img" />
  </div>
  <div class="cromo-info">
    <h2>{nome}</h2>
    <p>{denominacao}</p>
  </div>
</article>

<style>
  .cromo-card {
    border-radius: 1rem;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    font-family: sans-serif;
    display: flex;
    flex-direction: column;
    max-width: 240px;
  }

  .cromo-img-wrapper {
    width: 100%;
    aspect-ratio: 2 / 3;
    background-color: #ccc;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cromo-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .cromo-info {
    padding: 1rem;
    text-align: center;
    background: #f8f8f8;
  }

  .cromo-info h2 {
    margin: 0;
    font-size: 1.2rem;
  }

  .cromo-info p {
    margin: 0.25rem 0 0;
    color: #555;
  }
</style>
